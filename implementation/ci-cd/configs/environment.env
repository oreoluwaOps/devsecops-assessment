# DevSecOps Pipeline Configuration

# Container Registry
REGISTRY_URL=ghcr.io
REGISTRY_NAMESPACE=oreoluwaops/devsecops-assessment
DOCKER_BUILDKIT=1

# Image Tagging Strategy
# Uses commit SHA for traceability and immutable deployments
# Example: IMAGE_TAG=abc123def456... (full commit SHA)

# Security Scanning
SONAR_QUALITY_GATE_WAIT=true
DEPENDENCY_CHECK_FAIL_CVSS=7
TRIVY_SEVERITY=HIGH,CRITICAL

# Environment Settings
DEV_NAMESPACE=development
STAGING_NAMESPACE=staging  
PROD_NAMESPACE=production

# Resource Limits
CPU_REQUEST=100m
CPU_LIMIT=500m
MEMORY_REQUEST=128Mi
MEMORY_LIMIT=512Mi

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_RETENTION=30d
LOGS_RETENTION=30d

# Notification Configuration
SLACK_ENABLED=true
TEAMS_ENABLED=true
EMAIL_ENABLED=false
PAGERDUTY_ENABLED=true

# Deployment Configuration
BLUE_GREEN_ENABLED=true
CANARY_ENABLED=false
ROLLBACK_ENABLED=true
HEALTH_CHECK_TIMEOUT=300s

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION=7d
BACKUP_SCHEDULE="0 2 * * *"

# Performance Configuration
PERFORMANCE_TEST_ENABLED=true
LOAD_TEST_ENABLED=true
STRESS_TEST_ENABLED=false

# Compliance Configuration
COMPLIANCE_SCAN_ENABLED=true
PCI_COMPLIANCE=false
SOX_COMPLIANCE=false
GDPR_COMPLIANCE=true
